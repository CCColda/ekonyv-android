<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="@dimen/list_side_margin"
    android:layout_marginEnd="@dimen/list_side_margin"
    android:gravity="start"
    android:orientation="vertical"
    android:showDividers="middle"
    android:divider="@drawable/empty_tall_divider"
    tools:context=".ui.server.ServerFragment"
    android:id="@+id/server_fragment">

    <TextView
        android:id="@+id/sf_status"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center_vertical"
        android:text="@string/sf_status_disconnected"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/sf_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp" />

    <FrameLayout
        android:id="@+id/sf_connect_to_server"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </FrameLayout>

</LinearLayout>